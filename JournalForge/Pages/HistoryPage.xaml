<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:JournalForge.ViewModels"
             xmlns:models="clr-namespace:JournalForge.Models"
             x:Class="JournalForge.Pages.HistoryPage"
             x:DataType="viewmodels:HistoryViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        
        <!-- Header with Search -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,10">
            <Label Text="ðŸ“š Chronicle History ðŸ“š" 
                   Style="{StaticResource RPGHeaderLarge}"
                   HorizontalOptions="Center"/>
            
            <!-- Search Bar -->
            <Frame Style="{StaticResource RPGCard}" Padding="10">
                <HorizontalStackLayout Spacing="10">
                    <Entry Placeholder="Search entries..."
                           Text="{Binding SearchText}"
                           FontSize="14"
                           BackgroundColor="{StaticResource RPGParchment}"
                           TextColor="{StaticResource RPGDarkBrown}"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center"/>
                    <Button Text="ðŸ”"
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource RPGButtonSecondary}"
                            WidthRequest="50"
                            Padding="5"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Filter and Export Options -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Button Text="ðŸ“… Sort"
                        Command="{Binding ToggleSortCommand}"
                        Style="{StaticResource RPGButtonSecondary}"
                        FontSize="12"
                        Grid.Column="0"/>
                <Button Text="ðŸ“¥ Export All"
                        Command="{Binding ExportAllCommand}"
                        Style="{StaticResource RPGButtonSecondary}"
                        FontSize="12"
                        Grid.Column="1"/>
                <Button Text="ðŸ”„ Refresh"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource RPGButtonSecondary}"
                        FontSize="12"
                        Grid.Column="2"/>
            </Grid>

            <!-- Stats -->
            <Label Text="{Binding EntriesCountText}" 
                   FontSize="12"
                   TextColor="{StaticResource RPGTextSecondary}"
                   HorizontalOptions="Center"
                   Margin="0,5,0,0"/>
        </VerticalStackLayout>

        <!-- Entries List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="10">
                <CollectionView ItemsSource="{Binding FilteredEntries}"
                               SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:JournalEntry">
                            <Frame BackgroundColor="{StaticResource RPGParchment}"
                                   BorderColor="{StaticResource RPGBrown}"
                                   CornerRadius="8"
                                   Padding="15"
                                   Margin="0,5">
                                <VerticalStackLayout Spacing="8">
                                    <!-- Title and Date -->
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Text="{Binding Title}" 
                                               FontFamily="OpenSansSemibold"
                                               FontSize="16"
                                               TextColor="{StaticResource RPGDarkBrown}"
                                               LineBreakMode="TailTruncation"
                                               Grid.Column="0"/>
                                        <Label Text="{Binding CreatedDate, StringFormat='{0:MM/dd/yy}'}" 
                                               FontSize="12"
                                               TextColor="{StaticResource RPGTextSecondary}"
                                               VerticalOptions="Center"
                                               Grid.Column="1"/>
                                    </Grid>

                                    <!-- Content Preview -->
                                    <Label Text="{Binding Content}" 
                                           FontSize="13"
                                           TextColor="{StaticResource RPGTextSecondary}"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="3"/>

                                    <!-- Action Buttons -->
                                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="5" Margin="0,5,0,0">
                                        <Button Text="ðŸ“– View"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HistoryViewModel}}, Path=ViewEntryCommand}"
                                                CommandParameter="{Binding .}"
                                                Style="{StaticResource RPGButtonPrimary}"
                                                FontSize="11"
                                                Padding="5"
                                                Grid.Column="0"/>
                                        <Button Text="ðŸ“¤ Export"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HistoryViewModel}}, Path=ExportEntryCommand}"
                                                CommandParameter="{Binding .}"
                                                Style="{StaticResource RPGButtonSecondary}"
                                                FontSize="11"
                                                Padding="5"
                                                Grid.Column="1"/>
                                        <Button Text="ðŸ—‘ï¸ Delete"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HistoryViewModel}}, Path=DeleteEntryCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="{StaticResource RPGRed}"
                                                TextColor="White"
                                                FontSize="11"
                                                Padding="5"
                                                Grid.Column="2"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="20">
                            <Label Text="ðŸ“œ No entries found ðŸ“œ" 
                                   Style="{StaticResource RPGHeaderMedium}"
                                   TextColor="{StaticResource RPGTextSecondary}"
                                   HorizontalOptions="Center"/>
                            <Label Text="Start your journaling journey today!" 
                                   FontSize="14"
                                   TextColor="{StaticResource RPGTextSecondary}"
                                   HorizontalOptions="Center"
                                   Margin="0,10,0,0"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Activity Indicator -->
        <ActivityIndicator Grid.Row="1"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          Color="{StaticResource RPGGold}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"/>
    </Grid>

</ContentPage>
