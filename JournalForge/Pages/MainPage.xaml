<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:JournalForge.ViewModels"
             xmlns:models="clr-namespace:JournalForge.Models"
             x:Class="JournalForge.Pages.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Header -->
            <Label Text="âš”ï¸ Welcome, Chronicler âš”ï¸" 
                   Style="{StaticResource RPGHeaderLarge}"
                   Margin="0,20,0,10"/>

            <!-- Daily Prompt Card -->
            <Frame Style="{StaticResource RPGCard}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ“œ Today's Quest Prompt" 
                           Style="{StaticResource RPGHeaderMedium}"
                           TextColor="{StaticResource RPGGold}"/>
                    <Label Text="{Binding DailyPrompt}" 
                           Style="{StaticResource RPGBodyText}"
                           FontSize="16"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10">
                <Button Text="âœï¸ New Entry"
                        Style="{StaticResource RPGButtonPrimary}"
                        Command="{Binding NewEntryCommand}"
                        Grid.Column="0"/>
                <Button Text="â° Time Capsule"
                        Style="{StaticResource RPGButtonSecondary}"
                        Command="{Binding ViewTimeCapsuleCommand}"
                        Grid.Column="1"/>
            </Grid>

            <!-- Daily Insights -->
            <Frame Style="{StaticResource RPGCard}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ”® Daily Insights" 
                           Style="{StaticResource RPGHeaderMedium}"
                           TextColor="{StaticResource RPGBlue}"/>
                    <ScrollView MaximumHeightRequest="200">
                        <CollectionView ItemsSource="{Binding DailyInsights}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <Label Text="{Binding}" 
                                           Style="{StaticResource RPGBodyText}"
                                           FontSize="14"
                                           LineBreakMode="WordWrap"
                                           Margin="0,8,0,0"
                                           HorizontalOptions="FillAndExpand"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>
                </VerticalStackLayout>
            </Frame>

            <!-- Recent Entries -->
            <Frame Style="{StaticResource RPGCard}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ“– Recent Chronicles" 
                           Style="{StaticResource RPGHeaderMedium}"
                           TextColor="{StaticResource RPGGreen}"/>
                    <Label Text="(Tap any entry to view)" 
                           FontSize="12"
                           TextColor="{StaticResource RPGTextSecondary}"
                           HorizontalOptions="Center"
                           Margin="0,0,0,5"/>
                    <CollectionView ItemsSource="{Binding RecentEntries}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:JournalEntry">
                                <Frame BackgroundColor="{StaticResource RPGParchment}"
                                       BorderColor="{StaticResource RPGBrown}"
                                       CornerRadius="5"
                                       Padding="10"
                                       Margin="0,5">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnEntryTapped" CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding Title}" 
                                               FontFamily="OpenSansSemibold"
                                               FontSize="14"
                                               TextColor="{StaticResource RPGDarkBrown}"
                                               LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding CreatedDate, StringFormat='{0:MMMM dd, yyyy}'}" 
                                               FontSize="12"
                                               TextColor="{StaticResource RPGTextSecondary}"/>
                                        <Label Text="{Binding Content}" 
                                               FontSize="11"
                                               TextColor="{StaticResource RPGTextSecondary}"
                                               MaxLines="2"
                                               LineBreakMode="TailTruncation"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Refresh Button -->
            <Button Text="ðŸ”„ Refresh"
                    Style="{StaticResource RPGButtonSecondary}"
                    Command="{Binding RefreshCommand}"
                    Margin="0,10"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
