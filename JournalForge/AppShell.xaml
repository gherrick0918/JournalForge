<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JournalForge.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:JournalForge.Pages"
    Shell.FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="{StaticResource RPGDarkBrown}">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="{StaticResource RPGGold}" 
                  HeightRequest="200"
                  Padding="20">
                <VerticalStackLayout VerticalOptions="Center">
                    <Label Text="⚔️ JournalForge ⚔️" 
                           FontSize="28"
                           FontFamily="OpenSansSemibold"
                           TextColor="{StaticResource RPGDarkBrown}"
                           HorizontalOptions="Center"/>
                    <Label Text="Chronicle Your Journey" 
                           FontSize="12"
                           TextColor="{StaticResource RPGBrown}"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <FlyoutItem Title="Home" Icon="home.png">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="New Entry" Icon="edit.png">
        <ShellContent
            Title="Journal Entry"
            ContentTemplate="{DataTemplate local:JournalEntryPage}"
            Route="JournalEntryPage" />
    </FlyoutItem>

    <FlyoutItem Title="History" Icon="history.png">
        <ShellContent
            Title="Chronicle History"
            ContentTemplate="{DataTemplate local:HistoryPage}"
            Route="HistoryPage" />
    </FlyoutItem>

    <FlyoutItem Title="Time Capsule" Icon="timecapsule.png">
        <ShellContent
            Title="Time Capsule"
            ContentTemplate="{DataTemplate local:TimeCapsulePage}"
            Route="TimeCapsulePage" />
    </FlyoutItem>

</Shell>
